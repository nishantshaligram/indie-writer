{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 3,
    "title": "Indie Writer",
    "description": "An simple blog theme for indie writer that give more focus to content than visuals.",
    "slug": "indie-writer",
    "settings": {
        "layout": {
            "contentSize": "1170px",
            "wideSize": "1400px"
        },
        "spacing": {
            "padding": true,
            "margin": true,
            "units": [
                "px",
                "em",
                "rem",
                "vh",
                "vw",
                "%"
            ],
            "customSpacingSize": true,
            "spacingSizes": [
                {
                    "name": "IW Extra Small",
                    "size": "clamp(10px, 2vw, 20px)",
                    "slug": "iw-extra-small"
                },
                {
                    "name": "IW Small",
                    "size": "clamp(20px, 2vw, 40px)",
                    "slug": "iw-small"
                },
                {
                    "name": "IW Medium",
                    "size": "clamp(30px, 6vw, 60px)",
                    "slug": "iw-medium"
                },
                {
                    "name": "IW Large",
                    "size": "clamp(40px, 8vw, 80px)",
                    "slug": "iw-large"
                },
                {
                    "name": "IW Extra Large",
                    "size": "clamp(50px, 10vw, 100px)",
                    "slug": "iw-extra-large"
                }
            ]
        },
        "border": {
            "color": true,
            "width": true,
            "style": true,
            "radius": true
        },
        "color": {
            "background": true,
            "palette": [
                {
                    "name": "Background",
                    "slug": "background",
                    "color": "#f1f4f9"
                },
                {
                    "name": "Text",
                    "slug": "text",
                    "color": "#000000"
                },
                {
                    "name": "Primary",
                    "slug": "primary",
                    "color": "#3560D8"
                },
                {
                    "name": "Secondary",
                    "slug": "secondary",
                    "color": "#5B7DD9"
                },
                {
                    "name": "Accent",
                    "slug": "border",
                    "color": "#CCDAFB"
                }
            ],
            "custom": true
        },
        "typography": {
            "fontFamilies": [
                {
                    "fontFamily": "'Playfair Display', serif",
                    "slug": "playfair-display",
                    "name": "Playfair Display",
                    "fontFace": [
                        {
                            "fontFamily": "'Playfair Display', serif",
                            "fontVariant": "700",
                            "fontWeight": "700",
                            "fontStyle": "normal",
                            "src": ["file:./assets/fonts/PlayfairDisplay-Bold.ttf"]
                        },
                        {
                            "fontFamily": "'Playfair Display', serif",
                            "fontVariant": "900",
                            "fontWeight": "900",
                            "fontStyle": "normal",
                            "src": ["file:./assets/fonts/PlayfairDisplay-Black.ttf"]
                        }
                    ]
                },
                {
                    "fontFamily": "'Lato', sans-serif",
                    "slug": "lato",
                    "name": "Lato",
                    "fontFace": [
                        {
                            "fontFamily": "'Lato', serif",
                            "fontVariant": "400",
                            "fontWeight": "400",
                            "fontStyle": "normal",
                            "src": ["file:./assets/fonts/Lato-Regular.ttf"]
                        },
                        {
                            "fontFamily": "'Lato', serif",
                            "fontVariant": "400",
                            "fontWeight": "400",
                            "fontStyle": "italic",
                            "src": ["file:./assets/fonts/Lato-Italic.ttf"]
                        },
                        {
                            "fontFamily": "'Lato', serif",
                            "fontVariant": "300",
                            "fontWeight": "300",
                            "fontStyle": "normal",
                            "src": ["file:./assets/fonts/Lato-Light.ttf"]
                        },
                        {
                            "fontFamily": "'Lato', serif",
                            "fontVariant": "300",
                            "fontWeight": "300",
                            "fontStyle": "italic",
                            "src": ["file:./assets/fonts/Lato-LightItalic.ttf"]
                        }
                    ]
                }
            ],
            "dropCap": true,
            "fluid": true,
            "fontSizes":[
                {
                    "name": "IW XS",
                    "fluid": {
                        "min": "12px",
                        "max": "14px"
                    },
                    "size": "12px",
                    "slug": "iw-xs"
                },
                {
                    "name": "IW SM",
                    "fluid": {
                        "min": "14px",
                        "max": "16px"
                    },
                    "size": "14px",
                    "slug": "iw-sm"
                },
                {
                    "name": "IW M",
                    "fluid": {
                        "min": "18px",
                        "max": "21px"
                    },
                    "size": "18px",
                    "slug": "iw-m"
                },
                {
                    "name": "IW L",
                    "fluid": {
                        "min": "24px",
                        "max": "26px"
                    },
                    "size": "24px",
                    "slug": "iw-l"
                },
                {
                    "name": "IW XL",
                    "fluid": {
                        "min": "32px",
                        "max": "36px"
                    },
                    "size": "32px",
                    "slug": "iw-xl"
                },
                {
                    "name": "IW XXL",
                    "fluid": {
                        "min": "42px",
                        "max": "46px"
                    },
                    "size": "42px",
                    "slug": "iw-xxl"
                }
            ]
        },
        "shadow": {
            "presets": [
                {
                    "name": "Light",
                    "slug": "light",
                    "shadow": "0px 3px 6px 0px rgba(0,0,0,0.16)"
                }
            ]
        },
        "blocks": {
            "core/group": {
                "dimensions": {
                    "minHeight": true
                }
            }
        },
        "custom": {
		}
    },
    "styles": {
        "typography": {
            "fontFamily": "var(--wp--preset--font-family--lato)"
        },
        "elements": {
            "heading": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--playfair-display)",
                    "textTransform": "capitalize"
                },
                "color": {
                    "text": "var(--wp--preset--color--text)"
                },
                "spacing": {
                    "margin": {
                        "top": "0px",
                        "bottom": "var(--wp--preset--spacing--iw-extra-small)"
                    }
                }
            },
            "button": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--lato)",
                    "fontSize": "var(--wp--preset--font-size--iw-sm)",
                    "fontStyle": "normal",
                    "fontWeight": "500"
                },
                "color": {
                    "background": "var(--wp--preset--color--transparent)",
                    "text": "var(--wp--preset--color--primary)"
                },
                ":hover":{
                    "color": {
                        "background": "var(--wp--preset--color--transparent)",
                        "text": "var(--wp--preset--color--secondary)"
                    }
                }
            },
            "link": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--lato)",
                    "fontSize": "var(--wp--preset--font-size--iw-sm)"                    
                },
                "color": {
                    "text": "var(--wp--preset--color--text)"
                },
                ":hover": {
                    "color": {
                        "text": "var( --wp--preset--color--link-hover ) "
                    }
                }
            },
            "caption": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--playfair-display)",
                    "fontSize": "var(--wp--preset--font-size--iw-xs)",
                    "fontStyle": "italic",
                    "fontWeight": "400"
                },
                "color": {
                    "text": "var(--wp--preset--color--secondary)"
                }
            },
            "cite": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--playfair-display)",
                    "fontSize": "var(--wp--preset--font-size--iw-xs)",
                    "fontStyle": "italic",
                    "fontWeight": "400"
                },
                "color": {
                    "text": "var(--wp--preset--color--secondary)"
                }
            },
            "h1": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--iw-xxl)"
                }
            },
            "h2": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--iw-xl)"
                }
            },
            "h3": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--iw-l)"
                }
            },
            "h4": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--iw-m)"
                }
            },
            "h5": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--iw-sm)"
                }
            },
            "h6": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--iw-xs)"
                }
            }
        },
        "border": {
            "color": "var(--wp--preset--color--secondary)"
        },
        "color": {
            "background": "var(--wp--preset--color--background)",
            "text": "var(--wp--preset--color--text)"
        },
        "blocks": {
            "core/site-title": {
                "typography": {
                    "fontSize": "var(--wp--preset-font-size-iw-l)",
                    "fontWeight": "700",
                    "textTransform": "uppercase"
                }
            },
            "core/group": {
                "spacing": {
                    "padding": {
                        "top": "var(--wp--preset--spacing--iw-extra-large)",
                        "bottom": "var(--wp--preset--spacing--iw-extra-large)",
                        "left": "var(--wp--preset--spacing--iw-small)",
                        "right": "var(--wp--preset--spacing--iw-small)"
                    }
                }
            },
            "core/button":{
                "color": {
                    "text": "var( --wp-preset--color-button )"
                },
                "border": {
                    "width": "1px",
                    "color": "var(--wp--preset--color--secondary)",
                    "radius": "0",
                    "style": "solid"
                },
                "spacing": {
                    "padding": {
                        "top": "1em",
                        "bottom": "1em",
                        "left": "2.5em",
                        "right": "2.5em"
                    }
                },
                "typography": {
                    "textTransform": "uppercase"
                }
            },
            "core/read-more": {
                "color": {
                    "background": "var( --wp-preset--color-border )",
                    "text": "var( --wp-preset--color-button )"
                },
                "border": {
                    "width": "1px",
                    "color": "var(--wp--preset--color--secondary)",
                    "radius": "0",
                    "style": "solid"
                },
                "spacing": {
                    "padding": {
                        "top": "1em",
                        "bottom": "1em",
                        "left": "2.5em",
                        "right": "2.5em"
                    }
                },
                "typography": {
                    "textTransform": "uppercase"
                }
            },
            "core/site-logo": {
                "spacing": {
                    "margin": {
                        "bottom": "1rem"
                    }
                }
            },
            "core/post": {
                "border": {
                    "bottom": {
                        "width" : "1px",
                        "color": "var(--wp--preset--color--secondary)",
                        "style": "solid"
                    }
                },
                "spacing": {
                    "margin": {
                        "bottom": "1em"
                    }
                }
            },
            "core/post-excerpt": {
                "spacing": {
                    "margin": {
                        "bottom": "1.5em"
                    }
                }
            },
            "core/navigation": {
                "typography": {
                    "fontSize": "1em",
                    "fontWeight": "500",
                    "textTransform": "uppercase"
                },
                "dimensions": {
                    "minHeight": "60px"
                },
                "spacing": {
                    "blockGap": "1.2em"
                }
            },
            "core/post-featured-image": {
                "border": {
                    "radius": "1em"
                },
                "dimensions": {
                    "aspectRatio": "16:9"
                }
            },
            "core/query-pagination": {
                "spacing": {
                    "blockGap": "2em"
                }
            },
            "core/query-pagination-next": {
                "color": {
                    "text": "var( --wp-preset--color-button )"
                },
                "border": {
                    "width": "1px",
                    "color": "var(--wp--preset--color--secondary)",
                    "radius": "0",
                    "style": "solid"
                },
                "spacing": {
                    "padding": {
                        "top": "var(--wp--preset--spacing--iw-extra-small)",
                        "bottom": "var(--wp--preset--spacing--iw-extra-small)",
                        "left": "var(--wp--preset--spacing--iw-extra-small)",
                        "right": "var(--wp--preset--spacing--iw-extra-small)"
                    }
                }
            },
            "core/query-pagination-previous": {
                "color": {
                    "text": "var( --wp-preset--color-button )"
                },
                "border": {
                    "width": "1px",
                    "color": "var(--wp--preset--color--secondary)",
                    "radius": "0",
                    "style": "solid"
                },
                "spacing": {
                    "padding": {
                        "top": "var(--wp--preset--spacing--iw-extra-small)",
                        "bottom": "var(--wp--preset--spacing--iw-extra-small)",
                        "left": "var(--wp--preset--spacing--iw-extra-small)",
                        "right": "var(--wp--preset--spacing--iw-extra-small)"
                    }
                }
            },
            "core/query-pagination-numbers": {
            },
            "core/post-author": {
                "spacing": {
                    "padding": {
                        "top": "var(--wp--preset--spacing--iw-small)",
                        "bottom": "var(--wp--preset--spacing--iw-small)",
                        "left": "var(--wp--preset--spacing--iw-small)",
                        "right": "var(--wp--preset--spacing--iw-small)"
                    }
                },
                "border": {
                    "top": {
                        "width": "1px",
                        "style": "solid",
                        "color": "var(--wp--preset--color--primary)"
                    }                    
                }
            }
        }
    },
    "templateParts": [
        {
            "title": "Header",
            "name": "header",
            "area": "header"
        },
        {
            "title": "Footer",
            "name": "footer",
            "area": "footer"
        },
        {
            "title": "Sidebar",
            "name": "sidebar",
            "area": "general"
        },
        {
            "title": "Main",
            "name": "main",
            "area": "general"
        },
        {
            "title": "Main Single",
            "name": "main-single",
            "area": "general"
        },
        {
            "title": "Query",
            "name": "query",
            "area": "general"
        },
        {
            "title": "Content",
            "name": "content",
            "area": "general"
        },
        {
            "title": "Content Single",
            "name": "content-single",
            "area": "general"
        }
    ],
    "customTemplates": [
        {
            "name": "page-about",
            "postTypes": [
                "page"
            ],
            "title": "About"
        },
        {
            "name": "page-contact",
            "postTypes": [
                "page"
            ],
            "title": "Contact"
        }
    ],
    "patterns": [
        "indie-writer/quote",
        "indie-writer/featured-posts",
        "indie-writer/intro-section"
    ]
}