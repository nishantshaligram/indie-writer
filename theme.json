{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 3,
    "title": "Indie Writer",
    "description": "An simple blog theme for indie writer that give more focus to content than visuals.",
    "slug": "indie-writer",
    "settings": {
        "layout": {
            "contentSize": "960px",
            "wideSize": "1170px"
        },
        "spacing": {
            "padding": true,
            "margin": true,
            "units": [
                "px",
                "em",
                "rem",
                "vh",
                "vw",
                "%"
            ]
        },
        "border": {
            "color": true,
            "width": true,
            "style": true,
            "radius": true
        },
        "color": {
            "background": true,
            "palette": [
                {
                    "name": "Background",
                    "slug": "background",
                    "color": "#F2F2F2"
                },
                {
                    "name": "Text",
                    "slug": "text",
                    "color": "#000000"
                },
                {
                    "name": "Button",
                    "slug": "button",
                    "color": "#EAE4D5"
                },
                {
                    "name": "Button Hover",
                    "slug": "button-hover",
                    "color": "#B6B09F"
                },
                {
                    "name": "Border",
                    "slug": "border",
                    "color": "#EAE4D5"
                },
                {
                    "name": "Black",
                    "slug": "black",
                    "color": "#000000"
                },
                {
                    "name": "White",
                    "slug": "white",
                    "color": "#FFFFFF"
                }
            ],
            "custom": true
        },
        "typography": {
            "fontFamilies": [
                {
                    "fontFamily": "'Lato', sans-serif",
                    "slug": "lato",
                    "name": "Lato",
                    "fontFace": [
                        {
                            "fontFamily": "Lato",
                            "fontVariant": "300",
                            "fontWeight": "300",
                            "fontStyle": "normal",
                            "src": "https://fonts.googleapis.com/css2?family=Lato:wght@300&display=swap"
                        },
                        {
                            "fontFamily": "Lato",
                            "fontVariant": "400",
                            "fontWeight": "400",
                            "fontStyle": "normal",
                            "src": "https://fonts.googleapis.com/css2?family=Lato:wght@400&display=swap"
                        },
                        {
                            "fontFamily": "Lato",
                            "fontVariant": "500",
                            "fontWeight": "500",
                            "fontStyle": "normal",
                            "src": "https://fonts.googleapis.com/css2?family=Lato:wght@500&display=swap"
                        },
                        {
                            "fontFamily": "Lato",
                            "fontVariant": "700",
                            "fontWeight": "700",
                            "fontStyle": "normal",
                            "src": "https://fonts.googleapis.com/css2?family=Lato:wght@700&display=swap"
                        }
                    ]
                }
            ],
            "dropCap": true,
            "fluid": true,
            "fontSizes":[
                {
                    "name": "xs",
                    "fluid": true,
                    "size": "0.5em",
                    "slug": "extra-small"
                },
                {
                    "name": "sm",
                    "fluid": true,
                    "size": "0.875em",
                    "slug": "small"
                },
                {
                    "name": "m",
                    "fluid": true,
                    "size": "1em",
                    "slug": "medium"
                },
                {
                    "name": "l",
                    "fluid": true,
                    "size": "1.5em",
                    "slug": "large"
                }
            ]
        },
        "shadow": {
            "presets": [
                {
                    "name": "Light",
                    "slug": "light",
                    "shadow": "0px 3px 6px 0px rgba(0,0,0,0.16)"
                }
            ]
        },
        "custom": {
			
		}
    },
    "styles": {
        "typography": {
            "fontFamily": "var(--wp--preset--font-family--lato)"
        },
        "elements": {
            "heading": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--lato)"
                },
                "color": {
                    "text": "var(--wp--preset--color--text)"
                }
            },
            "button": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--lato)"
                },
                "color": {
                    "background": "var(--wp--preset--color--button)",
                    "text": "var(--wp--preset--color--white)"
                },
                ":hover":{
                    "color": {
                        "background": "var(--wp--preset--color--button-hover)",
                        "text": "white"
                    }
                }
            },
            "link": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--lato)"
                },
                "color": {
                    "text": "var(--wp--preset--color--text)"
                },
                ":hover": {
                    "color": {
                        "text": "var( --wp--preset--color--link-hover ) "
                    }
                }
            }
        },
        "border": {
            "color": "var(--wp--preset--color--border)"
        },
        "color": {
            "background": "var(--wp--preset--color--background)",
            "text": "var(--wp--preset--color--text)"
        },
        "blocks": {
            "core/group": {
                "spacing": {
                    "padding": {
                        "top": "1rem",
                        "bottom": "1rem",
                        "left": "1rem",
                        "right": "1rem"
                    }
                }
            },
            "core/button":{
                "color": {
                    "text": "var( --wp-preset--color-text )"
                },
                "border": {
                    "radius": "0.4em"
                }
            },
            "core/site-logo": {
                "spacing": {
                    "margin": {
                        "bottom": "1rem"
                    }
                }
            },
            "core/post": {
                "border": {
                    "bottom": {
                        "width" : "1px",
                        "color": "var(--wp--preset--color--border)",
                        "style": "solid"
                    }
                },
                "spacing": {
                    "margin": {
                        "bottom": "1em"
                    }
                }
            },
            "core/post-excerpt": {
                "spacing": {
                    "margin": {
                        "bottom": "1.5em"
                    }
                }
            }
        }
    },
    "templateParts": [
        {
            "title": "Header",
            "name": "header",
            "area": "header"
        },
        {
            "title": "Footer",
            "name": "footer",
            "area": "footer"
        },
        {
            "title": "Sidebar",
            "name": "sidebar",
            "area": "general"
        },
        {
            "title": "Main",
            "name": "main",
            "area": "general"
        },
        {
            "title": "Main Single",
            "name": "main-single",
            "area": "general"
        },
        {
            "title": "Query",
            "name": "query",
            "area": "general"
        },
        {
            "title": "Content",
            "name": "content",
            "area": "general"
        },
        {
            "title": "Content Single",
            "name": "content-single",
            "area": "general"
        }
    ],
    "customTemplates": [
    ]
}